<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_alignParentBottom="true"
    android:background="@color/nowPlayingBackground"
    android:padding="8dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/nowPlayingTitle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:paddingStart="12dp"
        android:paddingEnd="88dp"
        android:text="" />

    <!-- Right-most: Next (align parent right) -->
    <ImageButton
        android:id="@+id/nowNext"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_next_icon"
        android:contentDescription="Next"
        app:tint="@android:color/white"/>

    <!-- Play/Pause to the left of Next -->
    <ImageButton
        android:id="@+id/nowPlayPause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/nowNext"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play_icon"
        android:contentDescription="Play/Pause"
        app:tint="@android:color/white"/>

    <!-- Previous to the left of Play -->
    <ImageButton
        android:id="@+id/nowPrev"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toLeftOf="@id/nowPlayPause"
        android:layout_marginRight="8dp"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_previous_icon"
        android:contentDescription="Previous"
        app:tint="@android:color/white"/>

     <!-- clickable overlay to open the player (limit area to left of the controls) -->
     <View
         android:id="@+id/nowPlayingClickable"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_toLeftOf="@id/nowPrev"
         android:background="@android:color/transparent"
         android:clickable="true" />

 </RelativeLayout>
