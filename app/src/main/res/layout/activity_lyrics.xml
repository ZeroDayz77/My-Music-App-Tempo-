<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/music_player_background"
    tools:context="com.example.tempo.ui.LyricsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/lyricsToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:titleTextColor="@android:color/white"
            android:title="Song" />
    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp">

        <ScrollView
            android:id="@+id/lyricsScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/lyricsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Plain lyrics (fallback) -->
                <TextView
                    android:id="@+id/lyricsPlainText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white" />

                <!-- Synced lyrics container: each line will be added here as a TextView -->
                <LinearLayout
                    android:id="@+id/lyricsLinesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </LinearLayout>
        </ScrollView>

        <!-- A subtle error/info message area (tap to retry) -->
        <TextView
            android:id="@+id/lyricsStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:padding="12dp"
            android:background="#AA000000"
            android:textColor="@android:color/white"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true" />

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabToggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Toggle lyrics view"
        app:layout_anchorGravity="bottom|end"
        android:layout_gravity="bottom|end"
        app:srcCompat="@android:drawable/ic_menu_view"
        app:backgroundTint="@android:color/white"
        app:tint="@color/teal_700" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
